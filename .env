# Web Scraping Tool Environment Configuration
# Copy this file to .env and update with your actual API keys

# ===========================================
# API Integration Settings
# ===========================================

# Clearbit API (Company enrichment)
# Get your API key from: https://clearbit.com/
CLEARBIT_API_KEY=your_clearbit_api_key_here

# Hunter.io API (Email discovery)
# Get your API key from: https://hunter.io/
HUNTER_API_KEY=your_hunter_api_key_here

# Crunchbase API (Funding information)
# Get your API key from: https://data.crunchbase.com/
CRUNCHBASE_API_KEY=your_crunchbase_api_key_here

# LinkedIn API (Optional - for enhanced data)
# Get your API key from: https://developer.linkedin.com/
LINKEDIN_API_KEY=your_linkedin_api_key_here

# ===========================================
# Web Dashboard Settings
# ===========================================

# Flask secret key for session management
FLASK_SECRET_KEY=your_super_secret_key_here

# Dashboard port (default: 5000)
DASHBOARD_PORT=5000

# Dashboard host (default: localhost)
DASHBOARD_HOST=localhost

# ===========================================
# Proxy Settings
# ===========================================

# Proxy timeout in seconds
PROXY_TIMEOUT=10

# Maximum failures before marking proxy as bad
MAX_PROXY_FAILURES=3

# Proxy rotation strategy (round_robin, random, best_performance, weighted_random)
PROXY_ROTATION_STRATEGY=best_performance

# ===========================================
# Job Scheduler Settings
# ===========================================

# Database URL for job storage (SQLite by default)
SCHEDULER_DB_URL=sqlite:///scheduler.db

# Maximum concurrent jobs
MAX_CONCURRENT_JOBS=3

# Job execution timeout in seconds
JOB_TIMEOUT=1800

# ===========================================
# Scraping Settings
# ===========================================

# Default extraction level (basic, medium, advanced)
DEFAULT_EXTRACTION_LEVEL=medium

# Default output format (json, csv, xlsx)
DEFAULT_OUTPUT_FORMAT=json

# Maximum results per search query
MAX_SEARCH_RESULTS=20

# Request delay in seconds (to avoid rate limiting)
REQUEST_DELAY=1

# ===========================================
# Logging Settings
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=scraping_tool.log

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=true

# ===========================================
# Performance Settings
# ===========================================

# Enable caching (true/false)
ENABLE_CACHING=true

# Cache timeout in seconds
CACHE_TIMEOUT=3600

# Maximum memory usage in MB
MAX_MEMORY_USAGE=1024

# ===========================================
# Security Settings
# ===========================================

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Rate limit per minute
RATE_LIMIT_PER_MINUTE=60

# Enable IP rotation (true/false)
ENABLE_IP_ROTATION=true

# ===========================================
# Optional Features
# ===========================================

# Enable API integration (true/false)
ENABLE_API_INTEGRATION=true

# Enable proxy support (true/false)
ENABLE_PROXY_SUPPORT=true

# Enable web dashboard (true/false)
ENABLE_WEB_DASHBOARD=true

# Enable job scheduling (true/false)
ENABLE_JOB_SCHEDULING=true 